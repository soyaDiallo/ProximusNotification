{% endblock %}

{% block content_subheader %}
	<!--begin::Page Title-->
	<h5 class="text-dark font-weight-bold my-1 mr-5">Autres</h5>
	<!--end::Page Title-->

	<!--begin::Breadcrumb-->
	<ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
		<li class="breadcrumb-item text-muted">
			<span class="text-muted">Application</span>
		</li>
		<li class="breadcrumb-item text-muted">
			<a href="{{ path('administrateur_index') }}" class="text-muted">Accueil</a>
		</li>
		<li class="breadcrumb-item text-muted">
			<a href="#" class="text-muted">Les autres options</a>
		</li>
	</ul>
	<!--end::Breadcrumb-->
{% endblock %}

{% block content_subheader_right %}
	<!--begin::Toolbar-->
	<div
		class="d-flex align-items-center flex-wrap">
		<!--begin::Dropdown-->
		<div class="dropdown dropdown-inline" data-toggle="tooltip" title="Liste de Rémunérations" data-placement="top">
			<a href="#remunerations" class="btn btn-light-info font-weight-bolder px-5 px-5 my-1">
				<i class="fas fa-list-ul"></i>
				Liste Rémunérations
			</a>
		</div>
		<!--end::Dropdown-->
	</div>
	<!--end::Toolbar-->
{% endblock %}

{% block content_body %}
	<!--begin::Content-->
	<div
		class="content d-flex flex-column flex-column-fluid" id="kt_content">
		<!--begin::Entry-->
		<div
			class="d-flex flex-column-fluid">
			<!--begin::Container-->
			<div
				class="container">

				<!--begin::Card-->
				<div
					class="card card-custom gutter-b">
					<!--begin::Card-Header-->
					<div class="card-header flex-wrap">
						<div class="card-title">
							<h3 class="card-label">Les Raisons d'annulation
							</h3>
						</div>
					</div>
					<!--end::Card-Header-->
				</div>
				<!--end::Card-->

				<!--begin::Row-->
				<div class="row">
					<div
						class="col-xl-6">
						<!--begin::Card-->
						<div class="card card-custom gutter-b">
							<div class="card-header">
								<div class="card-title">
									<h3 class="card-label">Liste Motifs
										<span class="d-block text-muted pt-2 font-size-sm">La liste de tous les motifs d'annulation d'une offre</span>
									</h3>
								</div>
							</div>

							<div
								class="card-body">
								<!--begin::Example-->
								<div class="example">
									<div
										class="example-preview">
										<!--begin::Search Form-->
										<div class="mb-7 align-items-center">
											<div class="my-2 my-md-0">
												<div class="input-icon">
													<input type="text" class="form-control" placeholder="Recherche..." id="kt_datatable_search_query_fournisseurs"/>
													<span>
														<i class="flaticon2-search-1 text-muted"></i>
													</span>
												</div>
											</div>
										</div>
										<!--end: Search Form-->

										<!--begin: Datatable-->
										<table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable_fournisseurs">
											<thead>
												<tr>
													<th title="Field #1">N° Importation</th>
													<th title="Field #2">Motif</th>
													<th title="Field #3">Actions</th>
												</tr>
											</thead>
											<tbody>
												{% for item in raisons %}
													<tr>
														<td>
															<span class="font-weight-boldest text-primary">#{{item.id}}</span>
														</td>
														<td>{{item.motif}}</td>
														<td>
															<a href="{{path('autre_edit', {'page': 'raison', 'id': item.id})}}" class="d-inline btn btn-sm btn-clean btn-icon mr-3">
																<span class="svg-icon svg-icon-md">
																	<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
																		<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
																			<rect x="0" y="0" width="24" height="24"/>
																			<path d="M8,17.9148182 L8,5.96685884 C8,5.56391781 8.16211443,5.17792052 8.44982609,4.89581508 L10.965708,2.42895648 C11.5426798,1.86322723 12.4640974,1.85620921 13.0496196,2.41308426 L15.5337377,4.77566479 C15.8314604,5.0588212 16,5.45170806 16,5.86258077 L16,17.9148182 C16,18.7432453 15.3284271,19.4148182 14.5,19.4148182 L9.5,19.4148182 C8.67157288,19.4148182 8,18.7432453 8,17.9148182 Z" fill="#000000" fill-rule="nonzero" \ transform="translate(12.000000, 10.707409) rotate(-135.000000) translate(-12.000000, -10.707409) "/>
																			<rect fill="#000000" opacity="0.3" x="5" y="20" width="15" height="2" rx="1"/>
																		</g>
																	</svg>
																</span>
															</a>
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
										<!--end: Datatable-->
									</div>
								</div>
								<!--end::Example-->
							</div>
						</div>
						<!--end::Card-->
					</div>

					<div
						class="col-xl-6">
						<!--begin::Card-->
						<div class="card card-custom gutter-b">
							<div class="card-header">
								<div class="card-title">
									<h3 class="card-label">Nouveau Motif
										<span class="d-block text-muted pt-2 font-size-sm">Création d'un nouveau motif d'annulation d'offre</span>
									</h3>
								</div>
							</div>
							{{ form_start(form, {'attr': {'method': 'POST', 'class': 'form'}}) }}
							<div
								class="card-body">
								<!--begin::Example-->
								<div class="example">
									<div
										class="example-preview">
										<!--begin::Input-->
										<div class="form-group">
											<label>Motif</label>
											{{ form_widget(form.motif, {'attr': {'class': 'form-control form-control-solid form-control-lg', 'placeholder': 'Motif Annualtion'}}) }}
											<span class="form-text text-muted">Please enter your Postcode.</span>
										</div>
										<!--end::Input-->
									</div>
								</div>
								<!--end::Example-->
							</div>

							<!--begin::Footer-->
							<div class="card-footer mb-12 py-5 px-5">
								<div class="float-right">
									<button type="submit" class="btn btn-primary font-weight-bolder px-5 mr-3">Enregistrer</button>
									<button type="reset" class="btn btn-light-primary font-weight-bolder px-5">Annuler</button>
								</div>
							</div>
							<!--end::Footer-->
							{{ form_end(form) }}
						</div>
						<!--end::Card-->
					</div>
				</div>
				<!--end::Row-->

				<!--begin::Card-->
				<div
					class="card card-custom gutter-b" id="remunerations">
					<!--begin::Card-Header-->
					<div class="card-header flex-wrap">
						<div class="card-title">
							<h3 class="card-label">Les Rémunérations</h3>
						</div>
					</div>
					<!--end::Card-Header-->
				</div>
				<!--end::Card-->

				<!--begin::Row-->
				<div class="row">
					<div
						class="col-xl-6">
						<!--begin::Card-->
						<div class="card card-custom gutter-b">
							<div class="card-header">
								<div class="card-title">
									<h3 class="card-label">Liste Rémunérations
										<span class="d-block text-muted pt-2 font-size-sm">La liste de toutes les rémunérations associées au produits.</span>
									</h3>
								</div>
							</div>

							<div
								class="card-body">
								<!--begin::Example-->
								<div class="example">
									<div
										class="example-preview">
										<!--begin::Search Form-->
										<div class="mb-7 align-items-center">
											<div class="my-2 my-md-0">
												<div class="input-icon">
													<input type="text" class="form-control" placeholder="Recherche..." id="kt_datatable_search_query_remuneration"/>
													<span>
														<i class="flaticon2-search-1 text-muted"></i>
													</span>
												</div>
											</div>
										</div>
										<!--end: Search Form-->

										<!--begin: Datatable-->
										<table class="datatable datatable-bordered datatable-head-custom" id="kt_datatable_remuneration">
											<thead>
												<tr>
													<th title="Field #1">N° Importation</th>
													<th title="Field #2">Montant</th>
													<th title="Field #3">Actions</th>
												</tr>
											</thead>
											<tbody>
												{% for item in remunerations %}
													<tr>
														<td>
															<span class="font-weight-boldest text-primary">#{{item.id}}</span>
														</td>
														<td>{{item.montant}} €</td>
														<td>
															<a href="{{path('autre_edit', {'page': 'remuneration', 'id': item.id})}}" class="d-inline btn btn-sm btn-clean btn-icon mr-3">
																<span class="svg-icon svg-icon-md">
																	<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
																		<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
																			<rect x="0" y="0" width="24" height="24"/>
																			<path d="M8,17.9148182 L8,5.96685884 C8,5.56391781 8.16211443,5.17792052 8.44982609,4.89581508 L10.965708,2.42895648 C11.5426798,1.86322723 12.4640974,1.85620921 13.0496196,2.41308426 L15.5337377,4.77566479 C15.8314604,5.0588212 16,5.45170806 16,5.86258077 L16,17.9148182 C16,18.7432453 15.3284271,19.4148182 14.5,19.4148182 L9.5,19.4148182 C8.67157288,19.4148182 8,18.7432453 8,17.9148182 Z" fill="#000000" fill-rule="nonzero" \ transform="translate(12.000000, 10.707409) rotate(-135.000000) translate(-12.000000, -10.707409) "/>
																			<rect fill="#000000" opacity="0.3" x="5" y="20" width="15" height="2" rx="1"/>
																		</g>
																	</svg>
																</span>
															</a>
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
										<!--end: Datatable-->
									</div>
								</div>
								<!--end::Example-->
							</div>
						</div>
						<!--end::Card-->
					</div>

					<div
						class="col-xl-6">
						<!--begin::Card-->
						<div class="card card-custom gutter-b">
							<div class="card-header">
								<div class="card-title">
									<h3 class="card-label">Nouvelle Rémunération
										<span class="d-block text-muted pt-2 font-size-sm">Création d'une nouvelle rémunération</span>
									</h3>
								</div>
							</div>
							{{ form_start(formRemuneration, {'attr': {'method': 'POST', 'class': 'form'}}) }}
							<div
								class="card-body">
								<!--begin::Example-->
								<div class="example">
									<div
										class="example-preview">
										<!--begin::Input-->

										<div class="form-group">
											<label>Montant</label>
											{{ form_widget(formRemuneration.montant, {'attr': {'class': 'form-control form-control-solid form-control-lg', 'placeholder': 'Montant Rémunération'}}) }}
											<span class="form-text text-muted">Format
												<code>€ _1.234,56</code>
											</span>
										</div>
										<!--end::Input-->
									</div>
								</div>
								<!--end::Example-->
							</div>

							<!--begin::Footer-->
							<div class="card-footer mb-12 py-5 px-5">
								<div class="float-right">
									<button type="submit" class="btn btn-primary font-weight-bolder px-5 mr-3">Enregistrer</button>
									<button type="reset" class="btn btn-light-primary font-weight-bolder px-5">Annuler</button>
								</div>
							</div>
							<!--end::Footer-->
							{{ form_end(formRemuneration) }}
						</div>
						<!--end::Card-->
					</div>
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->
		</div>
		<!--end::Entry-->
	</div>
	<!--end::Content-->
{% endblock %}
